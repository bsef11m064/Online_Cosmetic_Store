@model MvcMusicStore.Models.Product

@{
    ViewBag.Title = "Product - " + Model.Title;
}

<h2>@Model.Title</h2>

<p>
    <img alt="@Model.Title" src="@Model.ProductArtUrl" />
</p>

<div id="album-details">
    <p>
        <em>Brand:</em>
        @Model.Brand.Name
    </p>
    <p>
        <em>Category:</em>
        @Model.Category.Name
    </p>
    <p>
        <em>Price:</em>
        @String.Format("{0:F}", Model.Price)
    </p>
    <p class="button">
        @Html.ActionLink("Add to cart", "AddToCart", 
        "ShoppingCart", new { id = Model.ProductId }, "")
    </p>
</div>
